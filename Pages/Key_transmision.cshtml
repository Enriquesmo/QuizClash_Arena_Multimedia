@page
@model QuizClash_Arena_Multimedia.Pages.Key_transmisionModel
@{
    ViewData["Title"] = "Clave de Transmisión";
}

<style>
    body {
        background-image: url('/images/fondo_azul.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        font-family: Arial, sans-serif;
        color: white;
        margin: 0;
        padding: 0;
    }

    .container {
        text-align: center;
        margin: 50px auto;
        padding: 20px;
        max-width: 1300px;
        background: rgba(0, 0, 0, 0.7);
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.6);
    }

    h2 {
        font-size: 2.5em;
        margin-bottom: 20px;
        background: linear-gradient(90deg, #ff6699, #ffcc00);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }

    p {
        font-size: 1.2em;
        margin-bottom: 20px;
        color: #ffcc00;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
    }

    .images-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* Dos columnas */
        gap: 20px;
        justify-items: center;
        align-items: center;
    }

    .image-item {
        text-align: center;
    }

    .image-item img {
        max-width: 100%;
        max-height: 300px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.6);
    }

    .image-item p {
        margin-top: 10px;
        color: white;
        font-size: 1.2em;
    }
</style>

<div class="container">
    <h2>Clave de Transmisión</h2>

    @if (!string.IsNullOrEmpty(Model.StreamKey))
    {
        <p>Tu clave de transmisión es: <strong>@Model.StreamKey</strong></p>
    }
    else
    {
        <p>No se pudo cargar la clave de transmisión.</p>
    }

    <div class="images-grid">
        @for (int i = 1; i <= 8; i++)
        {
            <div class="image-item">
                <img src="/images/fotos_token/@($"{i}.jpeg")" alt="Foto @i" />
                <p>Identificador: @i</p>
            </div>
        }
    </div>

    <!-- Botón "¡A jugar!" -->
    <div class="play-button-container">
        <button id="playGameButtonConTwitch" class="btn btn-success">¡A jugar!</button>
    </div>
</div>
<script>
    // Redirige al archivo '/start-chat-poll' con los parámetros al hacer clic en el botón
    document.getElementById("playGameButtonConTwitch").addEventListener("click", function () {


        // Construir la URL con los parámetros
        const url = `/Create_game?Twitch=True`;

        // Redirigir a la URL construida
        window.location.href = url;
    });
</script>
<style>
    /* Resto del estilo permanece igual */

    .play-button-container {
        margin-top: 30px;
        text-align: center;
    }

    .play-button {
        display: inline-block;
        padding: 15px 30px;
        font-size: 1.5em;
        font-weight: bold;
        color: white; /* Texto blanco por defecto */
        background-color: #ff4500; /* Naranja oscuro */
        border: none;
        border-radius: 10px;
        text-decoration: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.6);
        transition: background-color 0.3s ease, transform 0.2s ease, color 0.3s ease;
    }

        .play-button:hover {
            background-color: #ff3366; /* Rosa */
            transform: scale(1.05); /* Ligero zoom */
            color: white; /* Aseguramos que el texto siga blanco */
        }
</style>

