@page
@model QuizClash_Arena_Multimedia.Pages.MainGameModel
@{
    ViewData["Title"] = "Main Game";
}

<div style="position: absolute; top: 10px; right: 10px; text-align: right;">
    <img src="@Model.CurrentPlayer.Avatar" alt="Avatar" style="width: 50px; height: 50px; border-radius: 50%;">
    <p>@Model.CurrentPlayer.Name</p>
</div>

<h1>Escribe un texto para el meme</h1>

<div style="text-align: center; margin-top: 20px;">
    <img src="@Model.RandomMemePath" alt="Meme" style="max-width: 80%; max-height: 400px; border: 1px solid #ccc;">
</div>

<form method="post" style="margin-top: 20px; text-align: center;">
    <textarea name="userText" placeholder="Escribe tu texto aquí" style="width: 80%; height: 100px; resize: none;"></textarea>
    <br>
    <button type="submit" style="margin-top: 10px;">Enviar</button>
</form>
