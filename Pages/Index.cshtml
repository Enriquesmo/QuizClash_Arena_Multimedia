@page
@model QuizClash_Arena_Multimedia.Pages.IndexModel
@{
    ViewData["Title"] = "QuizClash_Arena";
}

<style>
    body {
        background-image: url('/images/fondo.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        font-family: Arial, sans-serif;
        color: white;
    }

    /* Estilo para el título */
    h1 {
        text-align: center;
        font-size: 3em;
        margin-top: 50px;
        color: #ffcc00;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }

    /* Estilo para el texto de bienvenida */
    p {
        text-align: center;
        font-size: 1.2em;
        margin-bottom: 30px;
        color: #ffffff;
    }

    /* Estilo para el botón principal */
    #playButton {
        font-size: 24px;
        padding: 15px 30px;
        background-color: #ff6633;
        color: white;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.3s;
    }

        #playButton:hover {
            background-color: #ff4500;
            transform: scale(1.1);
        }

    /* Estilo para la sección de opciones */
    #options {
        text-align: center;
        margin-top: 20px;
    }

        /* Estilo para los botones de opciones */
        #options button {
            font-size: 20px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 8px;
            margin: 10px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
        }

            #options button:hover {
                background-color: #45a049;
                transform: scale(1.05);
            }
</style>

<h1>QuizClash_Arena</h1>
<p>Bienvenido al juego de memes. ¡Diviértete creando y compartiendo!</p>

<div style="text-align: center;">
    <button id="playButton">A JUGAR</button>
</div>

<div id="options" style="display:none;">
    <h2>Selecciona una opción:</h2>
    <form method="get" asp-page="Login_Twitch">
        <button type="submit">Crear una partida con Twitch</button>
    </form>
    <form method="get" asp-page="Create_game">
        <button type="submit">Crear una partida sin Twitch</button>
    </form>
    <form method="get" asp-page="JoinGame">
        <button type="submit">Unirse a una partida</button>
    </form>
</div>

<script>
    document.getElementById("playButton").addEventListener("click", function () {
        document.getElementById("options").style.display = "block";
    });
</script>
