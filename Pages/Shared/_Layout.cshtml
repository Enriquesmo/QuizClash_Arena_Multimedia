<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuizClash_Arena_Multimedia</title>
    <link rel="icon" type="image/jpeg" href="images/icono.jpeg">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuizClash_Arena_Multimedia.styles.css" asp-append-version="true" />
    <style>
        /* Ajuste para mover el icono más a la izquierda y animación hover */
        .navbar-icon {
            margin-left: 10px; 
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-top: 20px;
        }

            .navbar-icon:hover {
                transform: scale(1.1); 
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3); 
            }
    </style>
</head>
<body>
    <header>
        <a asp-area="" asp-page="/Index">
            <img src="~/images/icono.jpeg" alt="Icono" class="navbar-icon" style="width: 130px; height: auto; position: absolute; top: 20px; left: 20px;" />
        </a>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<audio id="backgroundMusic" loop>
    <source src="/musica/Neon_Lights.mp3" type="audio/mp3">
    Tu navegador no soporta la reproducción de audio.
</audio>

<style>
    #backgroundMusic {
        display: none; /* Oculta el reproductor de audio */
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const music = document.getElementById("backgroundMusic");

        // Configurar volumen
        music.volume = 0.5;

        // Recuperar tiempo de reproducción si existe
        const savedTime = localStorage.getItem("musicCurrentTime");
        if (savedTime) {
            music.currentTime = parseFloat(savedTime);
        }

        // Reproducir automáticamente
        music.play();

        // Guardar el tiempo de reproducción al cambiar de página
        window.addEventListener("beforeunload", function () {
            localStorage.setItem("musicCurrentTime", music.currentTime);
        });
    });
</script>




